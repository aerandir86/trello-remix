<h3><%= board.escape("title") %></h3>
<p>
  <button class="add-list btn btn-success">Add New List</button>
</p>
<br>
<div id="list-container"></div>

    <div class="modal fade" id="new-list-modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          </div>
          <div class="modal-body">
            <div class="area-new-list-form">
            <form id="new-list-form">
              <input type="text" name="list[title]">
              <input type="submit" class="btn btn-primary" value="Create List">
            </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->